<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 边框颜色值 -->
    <item>
        <shape>
            <solid android:color="#5EA1FF" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item android:top="4dp">
        <shape>
            <solid android:color="#ffffff" />
            <corners
